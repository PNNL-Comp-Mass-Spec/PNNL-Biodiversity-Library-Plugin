<Window x:Class="BiodiversityPlugin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:BiodiversityPlugin.Models"
        xmlns:biodiversityPlugin="clr-namespace:BiodiversityPlugin"
        Title="Biodiversity Plugin" Height="500" Width="525">
    <Window.Resources>
        <biodiversityPlugin:OrgCodeToColorConverter x:Key="OrgCodeToColor" />
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2" />
            <RowDefinition Height="*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" FontWeight="Bold" FontSize="20">Organisms</TextBlock>
           <biodiversityPlugin:MvvmTreeView Grid.Row="1" ItemsSource="{Binding Organisms}" SelectedItemTarget="{Binding SelectedOrganismTreeItem, Mode=TwoWay}">
                <biodiversityPlugin:MvvmTreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type models:OrgPhylum}" ItemsSource="{Binding OrgClasses}">
                        <TextBlock Text="{Binding PhylumName}" />
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type models:OrgClass}" ItemsSource="{Binding Organisms}">
                        <TextBlock Text="{Binding ClassName}" />
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type models:Organism}">
                        <TextBlock Text="{Binding Name}" Foreground="{Binding OrgCode, Converter={StaticResource OrgCodeToColor}}" />
                    </HierarchicalDataTemplate>
                </biodiversityPlugin:MvvmTreeView.Resources>
            </biodiversityPlugin:MvvmTreeView>
        </Grid>
        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" ShowsPreview="True" />
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" FontWeight="Bold" FontSize="20">Pathways</TextBlock>
            <biodiversityPlugin:MvvmTreeView Grid.Row="1" ItemsSource="{Binding Pathways}" SelectedItemTarget="{Binding SelectedPathwayTreeItem, Mode=TwoWay}">
                <biodiversityPlugin:MvvmTreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type models:PathwayGroup}" ItemsSource="{Binding Pathways}">
                        <TextBlock Text="{Binding GroupName}" />
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type models:Pathway}">
                        <TextBlock Text="{Binding Name}" />
                    </HierarchicalDataTemplate>
                </biodiversityPlugin:MvvmTreeView.Resources>
            </biodiversityPlugin:MvvmTreeView>
        </Grid>
        <Button Grid.Row="3" Width="130" HorizontalAlignment="Right" Margin="0,10,0,0" Command="{Binding ExportToSkylineCommand}">Export to Skyline</Button>
    </Grid>
</Window>
